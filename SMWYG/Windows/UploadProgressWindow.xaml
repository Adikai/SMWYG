<Window x:Class="SMWYG.Windows.UploadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uploading..." Height="140" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Uploading file..." FontWeight="SemiBold" Foreground="White" />
        <ProgressBar Grid.Row="1" Height="20" Margin="0,12,0,0" Minimum="0" Maximum="100" Value="{Binding UploadProgress}" Visibility="{Binding IsUploading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Right" Margin="0,12,0,0" Foreground="#B9BBBE" Text="{Binding UploadProgress, StringFormat='{}{0:0}%'}"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="28" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>