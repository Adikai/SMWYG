<Window x:Class="SMWYG.Windows.ImageViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Viewer" Height="600" Width="800" AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Grid Background="Transparent">
        <Border Background="#CC000000" CornerRadius="6" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0">
            <Border.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.25" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            <Grid Width="760" Height="560" Background="#202225">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
                        <Button Content="Close" Width="80" Height="28" Click="Close_Click"/>
                    </StackPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Image x:Name="ViewerImage" Stretch="Uniform"/>
                    </ScrollViewer>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>