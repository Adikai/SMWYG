<Window x:Class="SMWYG.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="420" Width="460" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#2F3136">
    <Grid Margin="16">
        <TabControl x:Name="AuthTabs" Background="Transparent" BorderBrush="#202225" Foreground="White">
            <TabItem Header="Sign In" Background="#2F3136">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="12">
                        <TextBlock Text="Sign in" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Text="Username" Foreground="#B9BBBE"/>
                        <TextBox x:Name="UsernameBox" Margin="0,4,0,12" Background="#40444B" Foreground="White"/>
                        <TextBlock Text="Password" Foreground="#B9BBBE"/>
                        <PasswordBox x:Name="PasswordBox" Margin="0,4,0,12" Background="#40444B" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Sign In" Width="120" Padding="8" Background="#3BA55D" Foreground="White" IsDefault="True" Click="SignInButton_Click"/>
                        </StackPanel>
                        <TextBlock x:Name="ErrorText" Foreground="#D83C3E" Visibility="Collapsed" Margin="0,12,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Register" Background="#2F3136">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="12">
                        <TextBlock Text="Register with Invite Token" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <TextBlock Text="Invite Token" Foreground="#B9BBBE"/>
                        <TextBox x:Name="InviteTokenBox" Margin="0,4,0,12" Background="#40444B" Foreground="White"/>
                        <TextBlock Text="Username" Foreground="#B9BBBE"/>
                        <TextBox x:Name="NewUsernameBox" Margin="0,4,0,12" Background="#40444B" Foreground="White"/>
                        <TextBlock Text="Display Name (optional)" Foreground="#B9BBBE"/>
                        <TextBox x:Name="DisplayNameBox" Margin="0,4,0,12" Background="#40444B" Foreground="White"/>
                        <TextBlock Text="Password" Foreground="#B9BBBE"/>
                        <PasswordBox x:Name="NewPasswordBox" Margin="0,4,0,12" Background="#40444B" Foreground="White"/>
                        <TextBlock Text="Confirm Password" Foreground="#B9BBBE"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,4,0,12" Background="#40444B" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Register" Width="120" Padding="8" Background="#5865F2" Foreground="White" Click="RegisterButton_Click"/>
                        </StackPanel>
                        <TextBlock x:Name="RegisterErrorText" Foreground="#D83C3E" Visibility="Collapsed" Margin="0,12,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>